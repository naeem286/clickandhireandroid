<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_splash_screen"
    tools:context="com.example.naeemasghar.clickandhire.SplashScreen"
    android:background="@color/white">
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="140dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="24dp"
        android:layout_below="@+id/imgLogo"
        android:textColor="#434446"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:text="Save Time Save Money" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:textSize="18dp"
        android:layout_below="@+id/imgLogo"
        android:textColor="#3d3c3e"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:text="Designed and Developed by" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="10dp"
        android:layout_below="@+id/imgLogo"
        android:textColor="#3d3c3e"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:text="Naeem Asghar, Noor u Subho, Faqeeha Riaz" />

</LinearLayout>
