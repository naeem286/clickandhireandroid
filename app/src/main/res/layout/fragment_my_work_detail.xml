<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view_title"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp"
        android:padding="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_heading"
            android:text="Title"
            android:gravity="left"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@color/white"
            android:textColor="@color/profile_text_heading" />
        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/news_title"
            android:background="@color/white"
            android:layout_below="@id/title_heading"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:gravity="left"
            android:text="Click and Hire Project"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:minLines="1"
            android:maxLines="1"
            android:scrollbars="vertical" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view_detail"
        android:layout_margin="5dp"
        android:padding="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_heading"
            android:text="Detail"
            android:gravity="left"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@color/white"
            android:textColor="@color/profile_text_heading" />


        <EditText
            android:id="@+id/detail"
            android:layout_below="@id/detail_heading"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:text="All is working well"
            android:layout_marginTop="30dp"
            android:gravity="left"
            android:padding="5dp"
            android:textSize="16sp"
            android:background="@color/white"
            android:minLines="1"
            android:maxLines="15"
            android:scrollbars="vertical"
            android:inputType="textMultiLine"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view_fee"
        android:layout_margin="5dp"
        android:padding="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fee_heading"
            android:text="Budget"
            android:gravity="left"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@color/white"
            android:textColor="@color/profile_text_heading" />

        <EditText
            android:id="@+id/fee"
            android:textColor="@color/news_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/fee_heading"
            android:background="@color/white"
            android:text="Project Budget is 35000 PKR "
            android:padding="5dp"
            android:layout_marginTop="30dp"
            android:minLines="1"
            android:maxLines="1"
            android:scrollbars="vertical"
            android:inputType="numberDecimal"/>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view_date"
        android:layout_margin="5dp"
        android:padding="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date_heading"
            android:text="Date"
            android:gravity="left"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@color/white"
            android:textColor="@color/profile_text_heading" />
        <TextView
            android:id="@+id/date"
            android:textColor="@color/news_date"
            android:layout_width="match_parent"
            android:layout_alignParentRight="true"
            android:text="12-07-2016"
            android:layout_gravity="left"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="30dp"
            android:padding="5dp"/>

    </android.support.v7.widget.CardView>
        <!-- Update Button -->

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="14dp"
            android:background="@color/profile_text_heading"
            android:text="@string/btn_update"
            android:textColor="@color/btn_register_bg"
            android:layout_below="@+id/categoryList"/>
    </LinearLayout>
</ScrollView>