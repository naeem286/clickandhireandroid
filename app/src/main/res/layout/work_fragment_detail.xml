<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view_title"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp"
        android:padding="5dp">
    <TextView
       android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/lbl_name"
       android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:gravity="left"
       android:text="Click and Hire Project"
        android:layout_gravity="left"
       android:textStyle="bold"
       android:layout_alignParentTop="true" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view_detail"
        android:layout_margin="5dp"
        android:padding="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_heading"
            android:text="Detail"
            android:gravity="left"
            android:padding="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@color/white"
            android:textColor="@color/profile_text_heading" />

        <TextView
            android:id="@+id/detail"
            android:layout_below="@id/detail_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All is working well"
            android:layout_marginTop="30dp"
            android:gravity="left"
            android:padding="10dp"
            android:textSize="16sp"
            android:background="@color/white"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view_fee"
        android:layout_margin="5dp"
        android:padding="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fee_heading"
            android:text="Budget"
            android:gravity="left"
            android:padding="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@color/white"
            android:textColor="@color/profile_text_heading" />
        <TextView
            android:id="@+id/fee"
            android:textColor="@color/news_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/fee_heading"
            android:background="@color/white"
            android:text="Project Budget is 35000 PKR "
            android:padding="10dp"
            android:layout_marginTop="32dp"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view_date"
        android:layout_margin="5dp"
        android:padding="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date_heading"
            android:text="Date"
            android:gravity="left"
            android:padding="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@color/white"
            android:textColor="@color/profile_text_heading" />
        <TextView
            android:id="@+id/date"
            android:textColor="@color/news_date"
            android:layout_width="match_parent"
            android:layout_alignParentRight="true"
            android:text="12-07-2016"
            android:layout_gravity="left"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="30dp"
            android:padding="10dp"/>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view_user"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:padding="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/username_heading"
            android:text="Employer"
            android:gravity="left"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/profile_text_heading" />
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/profile"
            app:border_color="#FF000000"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_gravity="left"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Naeem Asghar"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_marginTop="52dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@+id/image" />


    </android.support.v7.widget.CardView>
    </LinearLayout>

</ScrollView>